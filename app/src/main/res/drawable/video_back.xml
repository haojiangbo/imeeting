<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <!-- 连框颜色值 -->
    <item>
        <shape>
            <corners android:radius="5dp"></corners>
            <stroke android:color="@color/baise"></stroke>
        </shape>
    </item>
    <!-- -->
    <item android:top="0.5dp" android:left="0.5dp" android:right="0.5dp" android:bottom="0.5dp"> <!--设置只有右边有边框 -->
        <shape >
            <corners android:radius="5dp"></corners>
            <stroke android:color="#00000000"></stroke>
        </shape>
    </item>
</layer-list>
