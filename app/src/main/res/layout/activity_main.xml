<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/open_video_test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打开视频"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="20dp"
        android:onClick="onClick"
        ></Button>

    <TextView
        android:visibility="gone"
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="录音测试"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />


    <Button
        android:visibility="gone"
        android:id="@+id/start_recorder"
        android:layout_marginTop="20dp"
        android:layout_below="@id/message"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始录音"
        android:onClick="onClick"
        />

    <Button
        android:visibility="gone"
        android:layout_below="@id/start_recorder"
        android:id="@+id/end_recorder"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="结束录音"
        android:onClick="onClick"
        />

    <!--注册号码-->
    <TextView
        android:id="@+id/register_number"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:background="@color/white"
        android:gravity="center_vertical|left"
        android:textColor="@color/lanse"
        android:text="点击注册"
        android:onClick="onClick"
        />

    <TextView
        android:layout_below="@id/register_number"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:id="@+id/my_call_number"
        android:layout_width="wrap_content"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:text="我的号码：123456"
        >

    </TextView>

    <TextView
        android:id="@+id/number_show"
        android:layout_alignParentTop="true"
        android:layout_marginTop="300dp"
        android:textSize="30dp"
        android:gravity="center"
        android:hint="请输入6位号码"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>


    <!--拨号键区域-->
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:orientation="vertical"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="20dp"
        android:background="@drawable/top_radio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@drawable/keyword_color"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:text="1"
                android:onClick="onClick"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@drawable/keyword_color"
                android:layout_height="match_parent"
                android:textSize="25dp"
                android:text="2"
                android:onClick="onClick"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:background="@drawable/keyword_color"
                android:textSize="25dp"
                android:layout_height="match_parent"
                android:text="3"
                android:onClick="onClick"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:background="@drawable/keyword_color"
                android:textSize="25dp"
                android:text="4"
                android:onClick="onClick"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="5"
                android:background="@drawable/keyword_color"
                android:textSize="25dp"
                android:onClick="onClick"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="6"
                android:background="@drawable/keyword_color"
                android:textSize="25dp"
                android:onClick="onClick"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="7"
                android:background="@drawable/keyword_color"
                android:textSize="25dp"
                android:onClick="onClick"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="8"
                android:background="@drawable/keyword_color"
                android:textSize="25dp"
                android:onClick="onClick"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="9"
                android:background="@drawable/keyword_color"
                android:textSize="25dp"
                android:onClick="onClick"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:orientation="horizontal"
            >
          <!--  <ImageButton
                android:layout_margin="0dp"
                android:padding="0dp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:src="@drawable/call"
                android:background="@drawable/keyword_color"
                />-->
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="CALL"
                android:background="@drawable/keyword_color"
                android:textSize="15dp"
                android:onClick="onClick"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="0"
                android:background="@drawable/keyword_color"
                android:textSize="25dp"
                android:onClick="onClick"
                />
            <Button
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="DEL"
                android:background="@drawable/keyword_color"
                android:textSize="15dp"
                android:onClick="onClick"
                />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>
