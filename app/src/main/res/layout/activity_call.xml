<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/heise"
    tools:context=".Call">

    <com.haojiangbo.widget.VideoSurface
        android:id="@+id/my_surface_show"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </com.haojiangbo.widget.VideoSurface>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/user"
        >
    </ImageView>


    <TextView
        android:id="@+id/number_show_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:textColor="@color/baise"
        android:textSize="15dp"
        android:text="号码：123456"
        >
    </TextView>
    <TextView
        android:layout_below="@id/number_show_text"
        android:id="@+id/call_status_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:textSize="15dp"
        android:textColor="@color/baise"
        android:text="正在呼叫..."
        >
    </TextView>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:gravity="center"
        android:layout_height="wrap_content">


        <Button
            android:id="@+id/accept_call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="#00000000"
            android:drawableTop="@drawable/accept"
            android:textColor="@color/white"
            android:text="接听"
            ></Button>


        <Button
            android:id="@+id/check_stream"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:onClick="onClick"
            android:background="#00000000"
            android:drawableTop="@drawable/volume"
            android:textColor="@color/white"
            android:visibility="gone"
            android:text="免提"
            ></Button>


        <Button
            android:id="@+id/hang_call"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:onClick="onClick"
            android:drawableTop="@drawable/close_call"
            android:textColor="@color/white"
            android:text="挂断"
            ></Button>
    </LinearLayout>



    <com.haojiangbo.widget.VideoSurface
        android:id="@+id/call_video_surface"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_width="100dp"
        android:layout_height="170dp"
        />

</RelativeLayout>